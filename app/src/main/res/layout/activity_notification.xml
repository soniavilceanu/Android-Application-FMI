<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@drawable/dashboard_article_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/original_lavender">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_arrow_back_24_white"/>

        <TextView
            android:id="@+id/titluInformatii"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notificări"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:paddingStart="40dp"
            android:fontFamily="casual"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/logoProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_settings_24"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setariDisplay"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alegeti pentru ce doriti sa primiti notificari"
            android:gravity="center"
            android:paddingTop="10dp"
            android:fontFamily="casual"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp">
        </TextView>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Orar"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxOrar"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calendar Academic"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxCalendar"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Examene"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxExamene"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Note"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxNote"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activitati"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxActivitati"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>
        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Anunturi"
                    android:paddingTop="10dp"
                    android:fontFamily="casual"
                    android:paddingBottom="10dp"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp">
                </TextView>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkboxAnunturi"
                    android:layout_gravity="center">

                </CheckBox>
            </LinearLayout>
        <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Interniship-uri"
                        android:paddingTop="10dp"
                        android:fontFamily="casual"
                        android:paddingBottom="10dp"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp">
                    </TextView>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkboxInternshipuri"
                        android:layout_gravity="center">
                    </CheckBox>
                </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voluntariate"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxVoluntariate"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/voluntariSetari"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voluntari inscrisi"
                android:paddingTop="10dp"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp">
            </TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxVoluntariInscrisi"
                android:layout_gravity="center">
            </CheckBox>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSalveazaSetari"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayoutScrollable"
            android:layout_centerInParent="true"
            android:background="@drawable/lavender_border"
            android:backgroundTint="@color/original_lavender"
            android:gravity="center"
            android:text="Salvează"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/notificariDisplay"
        android:visibility="visible">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nu aveti notificari"
        android:id="@+id/textAvemNotificari"
        android:paddingTop="20dp"
        android:fontFamily="casual"
        android:paddingBottom="10dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:visibility="gone">
    </TextView>

