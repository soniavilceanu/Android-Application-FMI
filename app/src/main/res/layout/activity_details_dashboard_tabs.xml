<!--                android:layout_width="380dp"-->
<!--                android:layout_height="2dp"-->
<!--                android:background="@color/white"-->
<!--                android:layout_marginStart="5dp"/>-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>